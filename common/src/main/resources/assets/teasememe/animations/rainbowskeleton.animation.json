{
  "format_version": "1.8.0",
  "animations": {
    "animation.rainbowskeleton.idle": {
      "loop": true,
      "bones": {
        "body": {
          "rotation": [0, 0, 0]
        },
        "head": {
          "rotation": [0, 0, 0]
        },
        "rightArm": {
          "rotation": [0, 0, 5]
        },
        "leftArm": {
          "rotation": [0, 0, -5]
        }
      }
    },
    "animation.rainbowskeleton.walk": {
      "loop": true,
      "bones": {
        "body": {
          "rotation": [0, 0, 0]
        },
        "rightArm": {
          "rotation": ["math.sin(query.walk_speed * query.life_time * 3) * 30", 0, 0]
        },
        "leftArm": {
          "rotation": ["-math.sin(query.walk_speed * query.life_time * 3) * 30", 0, 0]
        },
        "rightLeg": {
          "rotation": ["-math.sin(query.walk_speed * query.life_time * 3) * 30", 0, 0]
        },
        "leftLeg": {
          "rotation": ["math.sin(query.walk_speed * query.life_time * 3) * 30", 0, 0]
        }
      }
    },
    "animation.rainbowskeleton.attack": {
      "loop": false,
      "duration": 0.5,
      "bones": {
        "rightArm": {
          "rotation": ["-80 + math.sin(query.life_time * 20) * 10", 0, 0]
        },
        "leftArm": {
          "rotation": ["-80 + math.sin(query.life_time * 20) * 10", 0, 0]
        }
      }
    }
  }
}
